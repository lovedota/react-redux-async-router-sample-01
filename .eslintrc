{
    "parser": "babel-eslint",
    "rules": {
        "strict": 0,
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "jsx-quotes": [
            2,
            "prefer-double"
        ],
        "no-use-before-define": 2,
        "react/jsx-no-undef": 1,
        "no-unused-vars": 2,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/react-in-jsx-scope": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "react",
        "babel"
    ],
    "ecmaFeatures": {
        "jsx": true
    }
}